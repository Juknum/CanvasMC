{
  "compilerOptions": {
    "lib": [ "ESNext", "DOM" ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ESNext",
    "outDir": "build",
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}